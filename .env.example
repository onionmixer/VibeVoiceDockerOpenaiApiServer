# ===== Model Path Settings (Docker External) =====
# Host directory where model files are stored
MODEL_DIR=/path/to/your/models

# HuggingFace cache directory (optional)
HF_CACHE=~/.cache/huggingface

# ===== Device Settings =====
# GPU device (cuda or cpu)
DEVICE=cuda

# Attention implementation
# x86_64: flash_attention_2 (recommended)
# DGX Spark (ARM64): sdpa (required)
ATTN_IMPLEMENTATION=flash_attention_2

# ===== Service Toggles =====
# Enable/disable ASR service
ASR_ENABLED=true

# Enable/disable TTS service
TTS_ENABLED=true

# ===== Model Paths (inside container) =====
ASR_MODEL_PATH=/models/VibeVoice-ASR
TTS_MODEL_PATH=/models/VibeVoice-Realtime-0.5B
VOICES_PATH=/models/voices

# ===== Model Settings =====
# Data types (float16, bfloat16, or float32)
ASR_DTYPE=float16
TTS_DTYPE=float16
# Inference batch size
BATCH_SIZE=1

# ===== ASR Settings =====
ASR_MAX_NEW_TOKENS=32768
ASR_TEMPERATURE=0.0
ASR_TOP_P=1.0

# ===== TTS Settings (0.5B Streaming) =====
TTS_CFG_SCALE=1.5
TTS_INFERENCE_STEPS=5
TTS_SAMPLE_RATE=24000
DEFAULT_VOICE=carter

# ===== TTS Model Selection =====
# Which TTS model(s) to load: "0.5b", "1.5b", or "both"
TTS_MODEL_TYPE=0.5b

# ===== TTS 1.5B Full Model Settings =====
TTS_1_5B_MODEL_PATH=/models/VibeVoice-1.5B
TTS_1_5B_CFG_SCALE=1.3
TTS_1_5B_INFERENCE_STEPS=10

# ===== API Settings =====
API_HOST=0.0.0.0
API_PORT=8080
